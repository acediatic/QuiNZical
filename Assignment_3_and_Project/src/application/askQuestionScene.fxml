<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<Scene stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <root>
      <BorderPane fx:id="pane" minHeight="500.0" minWidth="700.0">
         <bottom>
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" snapToPixel="false" style="-fx-background-color: #009900;" text="Submit Answer" textFill="WHITE" BorderPane.alignment="CENTER">
               <font>
                  <Font size="16.0" />
               </font>
               <BorderPane.margin>
                  <Insets bottom="20.0" left="50.0" right="50.0" top="50.0" />
               </BorderPane.margin>
            </Button>
         </bottom>
         <center>
            <TextField alignment="CENTER" minHeight="50.0" minWidth="600.0" BorderPane.alignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
               <BorderPane.margin>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
               </BorderPane.margin>
            </TextField>
         </center>
         <top>
            <TextField alignment="CENTER" minHeight="50.0" minWidth="600.0" BorderPane.alignment="CENTER">
               <font>
                  <Font name="System Bold Italic" size="20.0" />
               </font>
               <BorderPane.margin>
                  <Insets left="50.0" right="50.0" top="50.0" />
               </BorderPane.margin>
            </TextField>
         </top>
      </BorderPane>
   </root>
</Scene>
