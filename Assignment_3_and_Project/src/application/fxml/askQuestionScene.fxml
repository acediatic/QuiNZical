<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<Scene stylesheets="@../css/questionStyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.AskingController">
   <root>
      <BorderPane fx:id="pane" minHeight="500.0" minWidth="700.0">
         <bottom>
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleSubmitButtonAction" snapToPixel="false" style="-fx-background-color: #009900;" text="Submit Answer" textFill="WHITE" BorderPane.alignment="CENTER">
               <font>
                  <Font size="16.0" />
               </font>
               <BorderPane.margin>
                  <Insets bottom="20.0" left="50.0" right="50.0" top="50.0" />
               </BorderPane.margin>
            </Button>
         </bottom>
         <center>
            <TextField fx:id="usrAns" alignment="CENTER" minHeight="50.0" minWidth="600.0" onKeyPressed="#lookForEnter" BorderPane.alignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
               <BorderPane.margin>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
               </BorderPane.margin>
            </TextField>
         </center>
         <top>
            <Label fx:id="questionField" textAlignment="CENTER" wrapText="true" BorderPane.alignment="CENTER">
               <font>
                  <Font name="System Bold Italic" size="26.0" />
               </font>
               <padding>
                  <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
               </padding>
            </Label>
         </top>
      </BorderPane>
   </root>
</Scene>
