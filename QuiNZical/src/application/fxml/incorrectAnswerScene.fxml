<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Scene stylesheets="@../css/incorrectAnswerStyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.sceneControllers.AnswerController">
   <root>
      <VBox alignment="CENTER" prefHeight="550.0" prefWidth="550.0" spacing="20.0">
         <children>
            <Text fill="WHITE" stroke="BLACK" strokeLineJoin="BEVEL" strokeType="OUTSIDE" strokeWidth="5.0" textAlignment="CENTER" visible="false" VBox.vgrow="ALWAYS">
               <font>
                  <Font name="System Bold Italic" size="26.0" />
               </font>
               <VBox.margin>
                  <Insets top="120.0" />
               </VBox.margin>
            </Text>
            <Text fill="WHITE" stroke="BLACK" strokeLineJoin="BEVEL" strokeType="OUTSIDE" strokeWidth="5.0" textAlignment="CENTER" visible="false" VBox.vgrow="ALWAYS">
               <font>
                  <Font name="System Bold Italic" size="26.0" />
               </font>
            </Text>
            <Text fx:id="winningsMsg" fill="WHITE" stroke="BLACK" strokeLineJoin="BEVEL" strokeType="OUTSIDE" strokeWidth="5.0" styleClass="usrWinnings" textAlignment="CENTER">
               <font>
                  <Font name="System Bold Italic" size="26.0" />
               </font>
            </Text>
            <HBox alignment="CENTER" prefHeight="75.0" prefWidth="200.0">
               <children>
                  <Button alignment="CENTER" contentDisplay="CENTER" minWidth="125.0" mnemonicParsing="false" onAction="#goHome" snapToPixel="false" style="-fx-background-color: #009900;" text="Home" textFill="WHITE" HBox.hgrow="SOMETIMES">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="40.0" />
                     </HBox.margin>
                  </Button>
                  <Button alignment="CENTER" contentDisplay="CENTER" minWidth="125.0" mnemonicParsing="false" onAction="#goQuestionBoard" snapToPixel="false" style="-fx-background-color: #009900;" text="New Question" textFill="WHITE">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </root>
</Scene>
